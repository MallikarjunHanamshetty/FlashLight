<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mallikarjunhanamshetty.flashyou.MainActivity">

   <Button
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:id="@+id/mTorchOnOffButton"
       android:gravity="center"
       android:layout_centerInParent="true"
       android:background="@drawable/green2"
       />

   <Button
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:id="@+id/sos"
       android:background="@drawable/sosblack"
       android:layout_below="@+id/mTorchOnOffButton"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="23dp" />

</RelativeLayout>
